# MongoDB connection string - replace with your actual MongoDB URI
MONGODB_URI=mongodb://localhost:27017/finance-manager

# JWT Secret - generate a secure secret key
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Node environment (development/production)
NODE_ENV=development

# Server port
PORT=5001

# Optional: Email configuration (if using email features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_EMAIL=your_email@example.com
# SMTP_PASSWORD=your_email_password
# FROM_EMAIL=noreply@example.com
